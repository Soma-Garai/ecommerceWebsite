@model eMarketing_project.Models.Adviewmodel
@{
    ViewBag.Title = "ViewAd";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}
<style>
    td {
        padding: 20px;
    }
</style>


<div class="row">
    <div class="col-lg-12" style=" border:1px solid solid;">
        <img src="~/Content/img/gif1.gif" style="width:100%; height:150%" />
    </div>
</div>

<div class="row">
    <div class="row" style="margin-bottom:40px">
        <div class="col-lg-2 col-md-2">
            <br />
            <br />
            <img src="~/Content/img/gif4.gif" class="img img-responsive" style="width:100%; height:100%" />
            <br />
            <br />
            <img src="~/Content/img/gif5.gif" class="img img-responsive" style="width:100%; height:100%" />
            <br />
            <br />
            <img src="~/Content/img/gif2.gif" class="img img-responsive" style="width:100%; height:100%" />
        </div>

        <div class="col-lg-8 col-md-8">
            <div>
                <h1>@Model.pro_name <small>AD-ID:@Model.pro_id</small></h1>
            </div>
            <img src="@Url.Content(Model.pro_image)" style="width:800px; height:450px" />
            <div>
                <h1>Description:</h1>
                <p>@Model.pro_des</p>
            </div>
            @using (@Html.BeginForm("AddToCart","User", FormMethod.Post))
            {
                <table>
                    <tr><td>Price:</td><td>Rs.@Model.pro_price</td></tr>
                    <tr><td>Category:</td><td>@Model.cat_name</td></tr>
                    <tr><td>Posted by:</td><td>@Model.u_name <img src="@Url.Content(Model.u_image)" style="width:40px; height:40px" /></td></tr>
                    <tr><td>Contact:</td><td>@Model.u_contact</td></tr>
                    <tr>
                        <td colspan="2">
                            @if (Convert.ToInt32(Session["u_id"]) == Convert.ToInt32(Model.pro_fk_user))
                            {
                                @Html.ActionLink("Delete this AD", "deleteAD", new { @class = "btn btn-info", id = Model.pro_id })
                                @* <input type="submit" value="Close AD" class="btn btn-danger" />*@
                                <br />
                                <br />
                                @Html.HiddenFor(m => Model.pro_id)
                                @Html.TextBoxFor(m => m.Quantity)
                                @*@Html.ActionLink("Add to Cart", "AddToCart", new { @class = "btn btn-info", pro_id = Model.pro_id, qty = Model.Quantity } )*@
                                <input type="submit" value="Submit" />
                            }

                        </td>
                    </tr>
                </table>
                }
        </div>

        <div class="col-lg-2 col-md-2">
            <br />
            <br />
            <img src="~/Content/img/gif2.gif" class="img img-responsive" style="width:100%; height:100%" />
            <br />
            <br />
            <img src="~/Content/img/gif3.gif" class="img img-responsive" style="width:100%; height:100%" />
        </div>
    </div>

