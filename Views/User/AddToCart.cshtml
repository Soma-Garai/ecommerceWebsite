@using System.Collections.Generic;
@model List<eMarketing_project.Models.tbl_cart>

@{
    ViewBag.Title = "Restock";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}


<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Inventory</title>

    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/paginition.css" rel="stylesheet" />

</head>
<body>
    <div style="height:1150px; ">
        <div class="row">
            <div class="col-lg-12" style=" border:1px solid solid;">
                <img src="~/Content/img/gif1.gif" style="width:100%; height:150%" />
            </div>
        </div>

        <div class="row" style="margin-bottom:40px">
            <div class="col-lg-2 col-md-2">
                <br />
                <br />
                <img src="~/Content/img/gif4.gif" class="img img-responsive" style="width:100%; height:100%" />
                <br />
                <br />
                <img src="~/Content/img/gif5.gif" class="img img-responsive" style="width:100%; height:100%" />
                <br />
                <br />
                <img src="~/Content/img/gif2.gif" class="img img-responsive" style="width:100%; height:100%" />
            </div>

            <div class="col-lg-8 col-md-8">
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">Pro_id</th>
                            <th scope="col">Product Name</th>
                            <th scope="col">Quantity</th>
                            

                        </tr>
                    </thead>
                    @foreach (var item in Model)
                    {
                        <tbody>
                            <tr>

                                <td>@item.pro_id</td>
                                <td>@item.pro_name</td>
                                
                                <td>@item.Quantity</td>
                                <th>@Html.ActionLink("Delete from cart", "DeleteCartItem", new { @class = "btn btn-info" ,cart_id=item.cart_id})</th>
                                @*<td>@<input type="text" name="IP" id="IP" /></td>*@

                            </tr>
                            @*<tr>
                                    <th scope="row"></th>
                                    <td>@item.pro_name</td>
                                </tr>
                                <tr>
                                    <th scope="row"></th>
                                    <td>@item.pro_status</td>
                                </tr>
                                <tr>
                                </tr>*@
                        </tbody>
                    }
                </table>
                @Html.ActionLink("Buy Now", "OrderNow", new { @class = "btn btn-info" })
            </div>

            <div class="col-lg-2 col-md-2">
                <br />
                <br />
                <img src="~/Content/img/gif2.gif" class="img img-responsive" style="width:100%; height:100%" />
                <br />
                <br />
                <img src="~/Content/img/gif3.gif" class="img img-responsive" style="width:100%; height:100%" />
            </div>
        </div>
    </div>
</body>
</html>



