
<!DOCTYPE html>

<html>
<head>
    <style>
        .na {
            text-decoration: none;
            color: white;
        }
    </style>
    <title>@Page.Title</title>
    @RenderSection("head", required: false)
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
</head>

<body>
    <nav class="navbar navbar-inverse">
        <div class="container-fluid">
            <div class="navbar-header">
                <a class="navbar-brand" href="#">Soma Garai</a>
            </div>
            <ul class="nav navbar-nav">
                <li>@Html.ActionLink("Category", "Index", "User", null, new { @class = "ht" }) </li>
                <li>
                    @if (Session["u_id"] != null)   //shown only when someone is logged in
                    {
                        @Html.ActionLink("Post An Ad", "createAD", "User", null, new { @class = "ht" })
                    }
                </li>
                <li>@Html.ActionLink("Inventory", "Restock", "User", null, new { @class = "ht" }) </li>
                <li>@Html.ActionLink("Cart", "AddToCart", "User", null, new { @class = "ht" }) </li>

            </ul>
            <ul class="nav navbar-nav navbar-right">
                <li>
                    @if (Session["u_id"] == null)
                    {
                        @Html.ActionLink("Log In", "login", "User", null, new { @class = "ht" })
                    }

                </li>
                <li>
                    @if (Session["u_id"] == null)
                    {
                        @Html.ActionLink("Sign Up", "signup", "User", null, new { @class = "ht" })
                    }
                    else
                    {
                        @Html.ActionLink("Log Out", "logout", "User", null, new { @class = "ht" })
                    }
                </li>
            </ul>
        </div>
    </nav>
    @RenderBody()
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
</body>
</html>
